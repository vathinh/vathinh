// tsconfig.json
{
  "compilerOptions": {
    "types": ["node", "node-fetch"],
    "typeRoots": ["node_modules/@types"],
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build"
  },
  "include": ["src/*"]
}
